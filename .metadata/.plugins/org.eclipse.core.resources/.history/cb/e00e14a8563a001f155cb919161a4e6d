package com.devsuperior.dsmeta;

import java.time.LocalDate;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import com.devsuperior.dsmeta.dto.SalesReportDTO;
import com.devsuperior.dsmeta.repositories.SaleRepository;

@SpringBootApplication
public class DsmetaApplication implements CommandLineRunner {
	@Autowired
	private SaleRepository repository;

	public static void main(String[] args) {
		SpringApplication.run(DsmetaApplication.class, args);
	}

	@Override
	public void run(String... args) throws Exception {
		List<SalesReportDTO> salesList = repository.getReports2(
				LocalDate.parse("2022-05-01"),
				LocalDate.parse("2022-05-31"),
				"odinson");

		System.out.println("******* CONSULTA JPQL *******");
		System.out.println("salesList: "+ salesList);

		salesList.forEach(item -> {
			System.out.println("ITEMS" + item);
		});
		System.out.println("\n\n");
	}
}
